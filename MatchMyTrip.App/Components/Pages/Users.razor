@page "/users"
@attribute [Authorize]

<Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
<h1>You are logged as @CurrentUser.UserName</h1>
</Microsoft.AspNetCore.Components.Authorization.AuthorizeView>

<table class="table table-striped table-light">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Username</th>
            <th scope="col">Role</th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in UserList)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Role</td>

                <td><a href="@("/profile/" + item.Id)">View profile</a></td>
                <td><a href="@("/edit-user/" + item.Id)">Edit</a></td>
            </tr>
        }

        @* <td><input type="button" class="btn-danger" value="Supprimer" (click)="deleteUser(item.id)"></td> *@
    </tbody>
</table>
