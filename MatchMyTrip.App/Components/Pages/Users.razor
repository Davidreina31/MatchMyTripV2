@page "/users"


<table class="table table-striped table-light">
    <thead>
        <tr>
            <th scope="col">Identifiant</th>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Pseudo</th>
            <th scope="col">Role</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in UserList)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Role</td>

                <td><a href="@("/profile/" + item.Id)">Voir profil</a></td>
            </tr>
        }

        @* <td><input type="button" class="btn-danger" value="Supprimer" (click)="deleteUser(item.id)"></td> *@
    </tbody>
</table>
