@page "/simplesearch"
@rendermode InteractiveServer

<h3>SimpleSearch</h3>

<br />
<br />
<br />

<input placeholder="entrer un mot clé" @bind="@SearchByKeyWord.KeyWord" />
<button type="submit" class="btn-primary" onclick="@HandleValidSubmit">rechercher</button>

<br />
<br />
<br />

<h4>@ErrorMsg</h4>

@if (Users != null)
{
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Pseudo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Users)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>

                    <td><a href="@("/profile/" + item.Id)">Voir profil</a></td>
                </tr>
            }
        </tbody>
    </table>
}
