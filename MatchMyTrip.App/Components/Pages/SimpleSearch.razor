@page "/simplesearch"

<h3>SimpleSearch</h3>

<br>
<br>
<br>
<br>
<div class="container">
    <div class="row height d-flex justify-content-center align-items-center">
        <div class="col-md-8">
            <div class="search">
                <i class="fa fa-search"></i>
                <Form method="post" Model="@SearchByKeyWord" OnValidSubmit="@HandleValidSubmit">
                    <InputText id="keyword" type="text" @bind-Value="@SearchByKeyWord.KeyWord" placeholder="Entrer un mot clé"></InputText>
                    <br />
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </Form>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />

@foreach (var item in Users)
{
    <h4>@item.UserName</h4>
    <h4>@item.FirstName</h4>
    <h4>@item.LastName</h4>
    <h4>@item.Email</h4>
    <h4>@item.Role</h4>
    <a href="@("/profile/" + item.Id)">Voir profil</a>

    <br />
    <br />
    @foreach (var journeys in item.Journeys)
    {
        <h3>@journeys.Destination</h3>
        <h3>@journeys.NbrOfDays</h3>
        <h3>@journeys.Seasons</h3>
    }

}


