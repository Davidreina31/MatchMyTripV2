        </Microsoft.AspNetCore.Components.Authorization.AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="simpleSearch">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Simple search
            </NavLink>
        </div>
        <div class="nav-item px-3">
