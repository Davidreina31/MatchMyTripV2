                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Specific search
            </NavLink>
        </div>

        <Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
            @if (CurrentUser.Role == Domain.enums.Roles.admin)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="activities">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Activities
                    </NavLink>
                </div>
            }

        </Microsoft.AspNetCore.Components.Authorization.AuthorizeView>

    </nav>
